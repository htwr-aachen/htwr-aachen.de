{
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "search.exclude": {
    "package-lock.json": true
  },
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": [
    "source.addMissingImports",
    "source.fixAll.eslint"
  ],
  "jest.autoRun": {
    "watch": false // Start the jest with the watch flag
    // "onStartup": ["all-tests"] // Run all tests upon project launch
  },
  "jest.showCoverageOnLoad": true, // Show code coverage when the project is launched
  "jest.showTerminalOnLaunch": false, // Don't automatically open test explorer terminal on launch
  // Multiple language settings for json and jsonc files
  "[json][jsonc][yaml]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.ignorePath": ".gitignore",
  "cSpell.language": "en,de-DE",
  "cSpell.enableFiletypes": ["mdx"],
  "cSpell.words": [
    "Adaptee",
    "Approximationsalgorithmus",
    "bissle",
    "builden",
    "compilen",
    "Diagonalsprache",
    "GÃ¶delnummer",
    "htwr",
    "katex",
    "Katex",
    "naja",
    "oembed",
    "Olchies",
    "Polynomialzeitalgorithmen",
    "polynomiell",
    "prismjs",
    "rehype",
    "Rumpe",
    "rwth",
    "Schnellzugrifflink",
    "simplifiziert",
    "Subdirs",
    "tuen",
    "Verifizierer",
    "vllt",
    "Whitebox",
    "wrappt",
    "youtube",
    "zitat"
  ],
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }, // Don't run prettier for files listed in .gitignore
  "typescript.tsdk": "node_modules\\.pnpm\\typescript@4.9.5\\node_modules\\typescript\\lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
